#!/bin/bash
#
################################################################################################
###################### Tag-Konfiguration #######################################################
################################################################################################
EXT=${1##*.}
FILE=$HOME/tmp/music/bands.txt
ART=`lltag -S "$1" | grep -i artist\= | awk 'FNR == 1 {print}' | cut -d '=' -f 2 | sed '/^ /s/^ *//;/^The/s/\([^ ]*\) *\([^ ]*.*\)/\2, \1 /g;s/[ (][Ff]eat[\. ]*.*$//;s/[ (][Ff]t[\. ]*.*$//;s/ [Vv]s\.*.*$//;s/\(\<.\)/\U\1/g;s/ *$//'`
ARTIST=`lltag -S "$1" | grep -i artist\= | awk 'FNR == 1 {print}' | cut -d '=' -f 2 | sed '/^ /s/^ *//;/^The/s/\([^ ]*\) *\([^ ]*.*\)/\2, \1 /g;s/[ (][Ff]eat[\. ]*.*$//;s/[ (][Ff]t[\. ]*.*$//;s/ [Vv]s\.*.*$//;s/\(\<.\)/\U\1/g;s/ *$//'`
ALBARTIST=`id3v2 -l "$1" | grep TPE2 | cut -d ':' -f 2 | sed '/^ /s/^ *//'`

case "$ARTIST" in
    *\&*)
        echo "$ARTIST"
        echo "$ARTIST" >> $FILE
        ;;
esac
